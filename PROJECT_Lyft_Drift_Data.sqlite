SELECT * FROM trips;
 
SELECT * FROM riders;
 
SELECT * FROM cars;

-- joining the id's between trips and riders
SELECT *
FROM trips
LEFT JOIN riders
  ON trips.rider_id = riders.id;

-- joining the id's between trips and cars
SELECT *
FROM trips
JOIN cars
  ON trips.car_id = cars.id;

-- joining tables with new data using UNION
SELECT *
FROM riders
UNION
SELECT *
FROM riders2;  

-- average cost for a trip
SELECT ROUND(AVG(cost), 2) 
FROM trips;

-- riders who has used Lyft less than 500 times
SELECT * 
FROM riders
WHERE 	total_trips < 500;

-- number of cars that are active
SELECT COUNT(*)
FROM cars
WHERE status = 'active';

-- the two cars that have the highest trips_completed
SELECT * 
FROM cars
ORDER BY trips_completed DESC
LIMIT 2;
